extends layout

block navi-content
	li
		a(href="/")
			i.fa.fa-dashboard.fa-lg
			span 전체 현황
	li
		a(href="task")
			i.fa.fa-edit.fa-lg
			span 작업 입력
	li.active
		a(href="monitor")
